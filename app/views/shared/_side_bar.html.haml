.side-bar
  .side-bar__user-name
    .top-items
      .top-times__name
        = current_user.name
      .top-items__icons
        = link_to new_group_path, class: "top-item__icons--edit" do
          = icon('fas', 'edit', class: "top-items__icon")
          %span<>
        = link_to edit_user_path(current_user), class: "top-item__icons--cog" do
          = icon('fas', 'cog', class: "top-items__icon")
          %span<>
  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__group
        = link_to edit_group_path(group.id), class: "side-bar__group" do
          %p.side-bar__group--name
            = group.name
          %p.side-bar__group--message まだメッセージがありません
    
  